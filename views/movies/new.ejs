<%- include('../partials/header.ejs') %>
<a href="/movies">Back to movies</a>

<h1>New Movie Recommendation</h1>
<form action="/movies/new" method="POST">
    <label for="title">Movie Title:</label>
    <input type="text" name="title" id="title" required />

    <label for="genre">Genre:</label>
    <input type="text" name="genre" id="genre" required>

    <label for="year">Release Year:</label>
    <input type="number" name="year" required>

    <label for="rating">Rating (0-10):</label>
    <input type="number" name="rating" min="0" max="10" step="0.1" required>

    <label for="imageUrl">Movie Image URL:</label>
    <input type="url" name="imageUrl" placeholder="https://example.com/image.jpg">

    <label for="note">Notes:</label>
    <textarea type="text" name="note"></textarea>

    <button type="submit">Add Movie Reccomendation</button>
</form>

