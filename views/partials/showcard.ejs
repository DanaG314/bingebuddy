
<div class="card">
    <div class="card-header">
        <h1><%= show.owner %>: Show</h1>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-lg-2" align="center">
                <div style="margin: 0 auto;">
                    <img id="show-image" src="<%= show.imageUrl %>" alt="imageUrl" style="width: 250px;">
                </div>
                
            </div>
            <div class="col-lg-6" style="max-height: 400px; margin: 0 auto; text-align: center;">
                <h1><%= show.title %></h1>
                <div id="details-container">
                    <h4>Genre: <%= show.genre %></h4>
                    <h4>Release Year: <%= show.year %></h4>
                    <h4>Rating: <%= show.rating %> </h4>
                    <h4>Seasons: <%= show.seasons %></h4>
                    <h4>Episodes: <%= show.episodes %></h4>
                </div>
                <div style="display: flex; justify-content: center; margin: 20px; text-align: left;">
                    <p id="description"><strong>Description:</strong> <%= show.description %></p>
                </div>
                <% if (!show.note) { %>
                   <p>No notes were added for this show.</p>
                    <% } else { %>
                        <p><strong>Notes:</strong> <%= show.note %></p>
                    <% } %>
            </div>
            </div>
        </div>
</div>

