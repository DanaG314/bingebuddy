<div class="card">
    <div class="card-header" id="feedmovie">
        <h1><%= movie.owner.username %>: üéûÔ∏è</h1>            
    </div>
    <div class="card-body" id="feedmoviebody">
        <div class="row">
            <div class="col-lg-3" align="center">
                <div style="margin: 0 auto;">
                    <img id="movie-image" src="<%= movie.imageUrl %>" alt="<%= movie?.title %>">
                </div>
                
            </div>
            <div class="col-lg-9" id="moviecard-container">
                <h1><%= movie.title %></h1>
                <div id="details-container">
                    <h4>Genre: <%= movie.genre %></h4>
                    <h4>Release Year: <%= movie.year %></h4>
                    <h4>Rating: <%= movie.rating %> </h4>
                </div>
                <div id="moviecard-description">
                    <p id="description"><strong>Description:</strong> <%= movie.description %></p>
                </div>
                <% if (!movie.note) { %>
                   <p>No notes were added for this movie.</p>
                <% } else { %>
                    <p><strong>Notes:</strong> <%= movie.note %></p>
                <% } %>
            </div>
        </div>
    </div>
</div>