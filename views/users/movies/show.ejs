<%- include('../../partials/navbar.ejs', { active: '' }) %>
<div class="card">
    <div class="card-header" id="movieview">
        <nav aria-label="breadcrumb">
            <ol id="movies-breadcrumb" class="breadcrumb mb-0">
                <li class="breadcrumb-item" aria-current="page">
                    <a href="/movies/user-movies">Back to Movies</a>
                </li>
            </ol>
            <div id="moviesedit-delete">
                <a class="btn btn-primary" href="/movies/user-movies/<%= movie._id %>/edit">Edit</a>
                <form action="/movies/user-movies/<%= movie._id %>?_method=DELETE" method="POST" id="main">
                    <button class="btn btn-danger" type="submit">DELETE</button>
                </form>
            </div>
        </nav>
    </div>
    <div class="card-body" id="movieviewbody">
        <div class="row">
            <div class="col-lg-3" align="center">
                <div id="moviesimage">
                    <img id="movie-image" src="<%= movie.imageUrl %>" alt="<%= movie?.title %>">
                </div>
                
            </div>
            <div class="col-lg-9" id="movies-show">
                <h1><%= movie.title %></h1>
                <div id="details-container">
                    <h4>Genre: <%= movie.genre %></h4>
                    <h4>Release Year: <%= movie.year %></h4>
                    <h4>Rating: <%= movie.rating %> </h4>
                </div>
                <div id="movies-show-description">
                    <p id="description"><strong>Description:</strong> <%= movie.description %></p>
                </div>
                <% if (!movie.note) { %>
                   <p>No notes were added for this movie.</p>
                <% } else { %>
                    <p><strong>Notes:</strong> <%= movie.note %></p>
                <% } %>
            </div>
        </div>
    </div>
</div>

<%- include('../../partials/footer.ejs') %>