<%- include('../partials/navbar.ejs', { active: '' }) %>

<div style="display: flex; justify-content: center; padding: 40px;">
    <h1>My Show Recommendations</h1>
    </div>
    <div class="row">
        <div class="col">
            <% if (showRecommendations && showRecommendations.length > 0) { %>
            <ul id="show-listing">
                <% showRecommendations.forEach(reco => { %>
                    <li>
                        <img src="<%= reco.media.show?.imageUrl %>" alt="<%= reco.media.show?.title %>" style="width: 250px;" />
                        <a href="/users/<%= user._id %>/recommendations/shows/<%= reco.media._id %>"><h2><%= reco.media.show?.title %></h2></a>
                    </li>
                <% }) %>
            </ul>
            <% } else { %>
                <p>You have not created show recommendations yet!</p>
            <% } %>
            
            
        </div>
    </div>
    <a href="<%= newLink %>" style="display: flex; justify-content: center; margin-top: 20px;">Add New Show Recommendation</a>

