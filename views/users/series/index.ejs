<%- include('../../partials/navbar.ejs', { active: '' }) %>
<div style="display: flex; justify-content: center; padding: 40px;">
<h1>My Series Recommendations</h1>
</div>
<div class="row">
    <div class="col">
        <% if (seriesRecommendations && seriesRecommendations.length > 0) { %>
        <ul id="series-listing">
            <% seriesRecommendations.forEach(reco => { %>
                <div class="card">
                    <div class="card-info">
                        <li>
                            <img src="<%= reco.media.series?.imageUrl %>" alt="<%= reco.media.series?.title %>" />
                            <a href="/users/<%= user._id %>/recommendations/series/<%= reco.media._id %>" class="button"><h2><strong><%= reco.media.series?.title %></strong></h2></a>
                        </li>
                    </div>
                  </div>
            <% }) %>
        </ul>
        <% } else { %>
            <p>You have not created any series recommendations yet!</p>
        <% } %>
        
        
    </div>
</div>
<a href="" style="display: flex; justify-content: center; margin-top: 20px; margin-bottom: 20px;">Add New Series Recommendation</a>

